{
  "name": "exegesis-boilerplate-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "./src/index.ts",
  "scripts": {
    "check": "tsc -p tsconfig.json --noEmit",
    "pretest": "npm run check",
    "test": "jest",
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node ./dist",
    "prod": "npm run build && npm run start",
    "format": "prettier --list-different '**/*.{js,ts,tsx}'",
    "format:fix": "prettier --write '**/*.{js,ts,tsx}'",
    "fix": "npm run lint:fix && npm run format:fix",
    "lint": "tslint '{src,test}/**/*.{ts,tsx}' -p .",
    "lint:fix": "tslint --project tsconfig.lint.json --fix",
    "predev": "npm run build",
    "dev": "tsc-watch --sourceMap --onSuccess \"node dist\""
  },
  "keywords": [
    "OpenAPI",
    "swagger",
    "OAS3"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lordoffreaks/exegesis-boilerplate-typescript.git"
  },
  "author": "Alejandro Tabares",
  "license": "ISC",
  "dependencies": {
    "exegesis": "^2.0.1",
    "exegesis-express": "^2.0.0",
    "express": "^4.16.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.15",
    "@types/jest-diff": "^20.0.1",
    "@types/js-yaml": "^3.12.1",
    "@types/supertest": "^2.0.7",
    "@types/typescript": "^2.0.0",
    "express-openapi-validate": "^0.4.4",
    "husky": "^2.5.0",
    "jest": "^24.8.0",
    "js-yaml": "^3.13.1",
    "lint-staged": "^8.2.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-lint": "^4.5.1",
    "ts-node": "^8.3.0",
    "tsc-watch": "^2.2.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.5.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
