{
    "compilerOptions": {
        "lib": [
            "es2016",
            "es2017.object",
            "dom"
        ],
        "allowJs": false,
        "module": "commonjs",
        "target": "es2016",
        "outDir": "dist",
        "baseUrl": "./",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true
    },
    "include": [
      "src/**/*",
      "typings/**/*"
    ]
}